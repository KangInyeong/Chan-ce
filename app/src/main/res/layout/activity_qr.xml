<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnMyPage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="Chan:ce"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"
        android:text="QR Code"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/medium"
        android:layout_marginLeft="20dp"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@color/ground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qrtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Inyeong Kang's QR code."
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/qr"
            android:layout_gravity="center"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Please show this QR to scan."/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnCreate"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_create_qr" />

</LinearLayout>