<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="Chan:ce"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:textSize="20dp" />

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <ImageView
                android:id="@+id/storeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:src="@drawable/temp_store_pic" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Introduction"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"  />

            <TextView
                android:id="@+id/storeIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:text="Store introduction contents"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"  />

            <TextView
                android:id="@+id/storeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Time"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"  />
            <TextView
                android:id="@+id/storeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 10:00 PM"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Number"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"  />

            <TextView
                android:id="@+id/storeNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="s02-123-4567"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:textSize="16dp" />

            <View
                android:background="#B2B2B2"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memu"
                android:textColor="@color/black"
                android:fontFamily="@font/medium"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/menulayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/menuName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuName"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/medium"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/menuIntro"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuIntro"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/menuPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="StoreTime"
                                android:textColor="@color/black"
                                android:layout_marginBottom="5dp"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/menulayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage1"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/menuName1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuName"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/medium"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/menuIntro1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuIntro"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/menuPrice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="StoreTime"
                                android:textColor="@color/black"
                                android:layout_marginBottom="5dp"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/menulayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage2"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/menuName2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuName"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/medium"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/menuIntro2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="MenuIntro"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/menuPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="StoreTime"
                                android:textColor="@color/black"
                                android:layout_marginBottom="5dp"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₩"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/btnSelect"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_select" />

</LinearLayout>